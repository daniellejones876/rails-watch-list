<div class="container p-4">
  <div class="row justify-content-center">
    <h1>New List 📝</h1>
    <%= simple_form_for @list do |f| %>
      <div class="form-inputs form-control">
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, 'Add', class: "btn btn-default btn-info" %>
        <%= link_to "🍿 Back to lists", lists_path, class: "btn text-white" %>
      </div>
    <% end %>
  </div>
</div>
