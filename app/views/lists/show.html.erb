<div class="wrapper bg-dark bg-gradient">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url('https://source.unsplash.com/random/?movie')">
    <div class="d-flex justify-content-between align-self-start p-2 bg-gradient">
      <img src="https://icons.iconarchive.com/icons/iconarchive/fat-sugar-food/256/Popcorn-icon.png" width=30px, alt="">
      <%= link_to "My Lists", lists_path, class: "btn text-white" %>
    </div>
      <h1 class="d-flex justify-content-center"><%= @list.name %></h1>
  </div>
  <div class="container">
    <%= link_to "Add a movie üìΩÔ∏è", new_list_bookmark_path(@list), class: "btn text-white d-flex justify-content-end" %>
    <div class="row gap-2 border-bottom">
      <% @list.bookmarks.each do |bookmark| %>
      <div class="card bg-dark bg-gradient" style="width: 20rem">
        <img src="<%= bookmark.movie.poster_url %>" class='card-img-top img-crop'/>
        <div class="card-body text-white">
          <div class="d-flex justify-content-between m-2 ">
            <h5><strong><%= bookmark.movie.title %></strong></h5>
            <p><%=bookmark.movie.rating %>‚≠êÔ∏è</p>
          </div>
          <p><em><%=bookmark.movie.overview %></em></p>
          <%= link_to "Delete", bookmark_path(bookmark), class: "btn text-danger justify-content-end",  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{bookmark.movie.title} from your #{bookmark.list.name} list"} %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
